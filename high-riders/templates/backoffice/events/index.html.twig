{% extends 'base.html.twig' %}

{% block title %}Hello page Evenements backoffice{% endblock %}

{% block body %}
<main class"container">

    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('backoffice_home')  }}">
            <img src="{{ asset('images/LogoridersV1.1.png') }}" alt="" width="100" height="80" class="d-inline-block align-text">
            High Riders | Les Evenements
            </a>
        </div>
    </nav>
    
        <div class="m-4">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-success">
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Image</th>
                    <th>Description del'évenement</th>
                    <th>Heures d'ouverture</th>
                    <th>Heures de fermeture</th>
                    <th>Difficulté de l'évenement</th>
                    <th>Date de l'évenement</th>
                    <th>Liens vers site Officiel</th>
                    <th>Prix d'entrée</th>
                    <th>Accessibilité</th>
                    <th>Nbre de Participants</th>
                    <th>Nbre de Like</th>
                    <th>Status</th>
                    <th>Type d'évenement</th>
                   
                </tr>
            </thead>
            <tbody>
        {% for listEvent in events %}
            <tr>
                <td>{{ listEvent.id }}</td>
                <td>{{ listEvent.title }}</td>
                <th> <image src="{{ listEvent.image }}" width="75" > </th>
                <td>{{ listEvent.description }}</td>
                <td>{{ listEvent.openingHours }}</td>
                <td>{{ listEvent.closedHours }}</td>
                <td>{{ listEvent.difficulty }}</td>
                <td>{{ listEvent.dateEvent }}</td>
                <td>{{ listEvent.link }}</td>
                <td>{{ listEvent.price }}</td>
                <td>{{ listEvent.accessibility}}</td>
                <td>{{ listEvent.participationUser }}</td>
                <td>{{ listEvent.eLike }}</td>
                <td>{{ listEvent.status }}</td>
                <td>{{ listEvent.typeEvent }}</td>
               
            
                <td> 
                <div class="d-grid gap-2 col-6 mx-auto">
                    <a href="{{ path('backoffice_event_edit', {id:listEvent.id}) }}" class="btn btn-outline-secondary btn-sm">Modifier</a> 
                    <a href="{{ path('backoffice_event_delete', {id:listEvent.id}) }}" class="btn btn-outline-secondary btn-sm" onclick="return confirm('Êtes-vous sur de vouloir effectuer cette action ?')">Supprimer</a>
                </div>
                </td>
            </tr>
        {% endfor %}
                <a href="{{ path('backoffice_event_add')  }}" class="btn btn-outline-success btn-sm mb-2">Ajouter un nouvel Evenement </a>   
                <a href="{{ path('backoffice_home')  }}" class="btn btn-outline-secondary btn-sm mb-2 ms-2">Retour à l'accueil</a> 
        </table>   
    </div>            
</main>


{% endblock %}
