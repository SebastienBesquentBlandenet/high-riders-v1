{% extends 'base.html.twig' %}

{% block title %}Page utilisateurs{% endblock %}

{% block body %}
 <main class='container'>

    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('backoffice_home')  }}">
            <img src="{{ asset('images/LogoridersV1.1.png') }}" alt="" width="100" height="80" class="d-inline-block align-text">
            High Riders | Les utilisateurs
            </a>
        </div>
    </nav>

    <div class="m-4">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-success">
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Pseudo</th>
                    <th>Avatar</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Presentation</th>
                    <th>City</th>
                    <th>Departement</th>
                    <th>Equipement</th>
                    <th>CreatedAt</th>
                    {# <th>UpdatedAt</th> #}
                    {# <th>actions</th> #}
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.avatar }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.presentation }}</td>
                    <td>{{ user.city }}</td>
                    <td>{{ user.departement }}</td>
                    <td>{{ user.equipement }}</td>
                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <a href="{{ path('backoffice_user_show', {'id': user.id}) }}" class="btn btn-outline-secondary btn-sm">Voir</a>
                        <a href="{{ path('backoffice_user_edit', {'id': user.id}) }}" class="btn btn-outline-secondary btn-sm">Modifier</a>
                    </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="15">no records found</td>
                </tr>
            {% endfor %}

            <div class="d-grid gap-2 d-md-block">
            <a href="{{ path('backoffice_user_add') }}" class="btn btn-outline-success btn-sm mb-2">Ajouter un utilisateur</a>  
            <a  href="{{ path('backoffice_home')  }}" class="btn btn-outline-secondary btn-sm mb-2">Retour Ã  l'accueil</a> 
            </div>
            
            </tbody>
    

        </table>
    </div>
</main>
    
{% endblock %}
