{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
    <div class='container'>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
               
                <th>Pseudo</th>
                <th>Avatar</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Presentation</th>
                <th>City</th>
                <th>Departement</th>
                <th>Equipement</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                
                <td>{{ user.pseudo }}</td>
                <td>{{ user.avatar }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.presentation }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.departement }}</td>
                <td>{{ user.equipement }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('backoffice_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('backoffice_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <a href="{{ path('backoffice_user_add') }}">Create new</a>
{% endblock %}
